# To learn more about .editorconfig see https://aka.ms/editorconfigdocs
root = true

# All files
[*]
indent_style = space
insert_final_newline = true

# ReSharper properties
resharper_space_before_self_closing = true

# Xml,Xaml,Axaml files
[*.{xml,xaml,axaml}]
indent_size = 4

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4

# .NET coding conventions
dotnet_sort_system_directives_first = true

# Keep default auto-generated csproj format
[*.csproj]
indent_size = 2

# Keep default auto-generated settings format
[*.settings]
indent_size = 2
max_line_length = 240
insert_final_newline = false
