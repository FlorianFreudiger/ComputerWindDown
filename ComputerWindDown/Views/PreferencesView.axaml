<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="260"
			 x:Class="ComputerWindDown.Views.PreferencesView">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,20,0,10">Grayscale transition</TextBlock>

        <CheckBox IsChecked="{Binding Enable}" HorizontalAlignment="Center" Margin="10">Enable</CheckBox>

        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">Start</TextBlock>
        <TimePicker SelectedTime="{Binding TransitionStart}"/>

        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">End</TextBlock>
        <TimePicker SelectedTime="{Binding TransitionEnd}"/>
    </StackPanel>
</UserControl>
